@{
    Layout = null;
}
@model SunBeam.Domain.Models.ZoneOrAreas
<!-- Modal -->
@using (Html.BeginForm("Edit", "ZoneOrArea", FormMethod.Post, new { @Id = "frmZoneOrAreas" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title" id="myModalLabel">Edit</h4>
    </div>
    @Html.HiddenFor(m => m.Id)
    <div class="modal-body">
        <div class="">
            <div class="row">
                <div class="col-md-5">
                    <label for="category"> Code</label>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Code, new { @Class = "form-control required", @placeholder = "Code" })
                    </div>
                </div>
                <div class="col-md-5">
                    <label for="category"> Name</label>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @Class = "form-control required", @placeholder = "Name" })
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <label for="category"></label>
                <div class="form-group">
                    <label class="toggle">
                        @Html.CheckBox("IsActive", new { @Class = "", @placeholder = "Name" })
                        @*// <input type="checkbox" name="checkbox-toggle" checked="checked">*@
                        <i data-swchon-text="ON" data-swchoff-text="OFF"></i>IsActive
                    </label>
                </div>
            </div>
                <div class="col-md-12">
                    <label for="category"> Description</label>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Description, new { @Class = "form-control required", @placeholder = "Description", @rows = "5" })
                    </div>
                </div>
                <div class="col-md-12">
                    <label for="category"> Remarks</label>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Remarks, new { @Class = "form-control required", @placeholder = "Remarks", @rows = "5" })
                    </div>
                </div>
            </div>
        </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="button" class="btn btn-primary" onclick="pageSubmit('frmZoneOrAreas');">
            Submit
        </button>
    </div>
}
<script>
    $(function () {
        valiDation("frmZoneOrAreas");
    });
</script>

