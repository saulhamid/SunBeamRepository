@{
    Layout = null;
}
@model SunBeam.Domain.Models.Markets
<!-- Modal -->
@using (Html.BeginForm("Create", "Market", FormMethod.Post, new { @Id = "frmMarket", @Name= "frmMarket" }))
{
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">Create</h4>
</div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <label for="category"> Name</label>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Name, new { @Class = "form-control required", @placeholder = "Name" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="category"> ZoneOrArea</label>
                        <div class="form-group">
                            @Html.SimpleDropDownFor(m => m.ZoneOrAreaId, "/Config/ZoneOrArea/DropDownZoneOrAreas", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label for="category"> Remarks</label>
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.Remarks, new { @Class = " required", @placeholder = "Remarks", @rows = "5" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="pageSubmit('frmMarket');">
                    Submit
                </button>
            </div>
}

<script>
    $(function () {
        valiDation("frmMarket");
        InitDropDowns();
        $(".Dropdown").select2();
        $(".Dropdown").trigger('change');
    });
   
</script>