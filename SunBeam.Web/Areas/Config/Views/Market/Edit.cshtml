@{
    Layout = null;
}
@model SunBeam.Domain.Models.Markets
<!-- Modal -->
@using (Html.BeginForm("Edit", "Market", FormMethod.Post, new { @Id = "frmMarkets" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title" id="myModalLabel">Edit</h4>
    </div>
    @Html.HiddenFor(m => m.Id)
    <div class="modal-body">
        <div class="row">
                <div class="col-md-6">
                    <label for="category"> Name</label>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Name, new { @Class = "form-control required", @placeholder = "Name" })
                    </div>
                </div>
            <div class="col-md-6 ">
                <label for="category"> ZoneOrArea</label>
                <div class="">
                    @Html.SimpleDropDownFor(m => m.ZoneOrAreaId, "/Config/ZoneOrArea/DropDownZoneOrAreas", new { @Class = " Dropdown", @placeholder = "Remarks", @rows = "5" })
                </div>
            </div>
            </div>
            <div class="row">

                <div class="col-md-3">
                    <label for="IsActive"> </label>
                    <div class="form-group smart-form">
                        <label class="toggle">
                            @Html.CheckBox("IsActive", new { @Class = "", @placeholder = "Name" })
                            @*// <input type="checkbox" name="checkbox-toggle" checked="checked">*@
                            <i data-swchon-text="ON" data-swchoff-text="OFF"></i>IsActive
                        </label>
                    </div>
                </div>
                <div class="col-md-9">
                    <label for="Remarks"> Remarks</label>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Remarks, new { @Class = " required", @placeholder = "Remarks", @rows = "5" })
                    </div>
                </div>
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="pageSubmit('frmMarkets');">
                    Submit
                </button>
            </div>
}
<script>
    $(function () {
        valiDation("frmMarkets");
        InitDropDowns();
        $(".Dropdown").select2();
      
       
    });
</script>
