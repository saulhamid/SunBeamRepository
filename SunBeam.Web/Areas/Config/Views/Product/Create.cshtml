@model SunBeam.Domain.Models.Products
<!-- Modal -->
@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @Id = "frmProduct", @Name = "frmProduct" }))
{
    <!-- MAIN CONTENT -->
    <div id="content">
        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">


                <!-- NEW WIDGET START -->
                <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">


                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false">
                        <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                        -->
                        <header>
                            <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                            <h2>Create </h2>

                        </header>

                        <!-- widget div-->
                        <div>

                            <!-- widget edit box -->
                            <div class="jarviswidget-editbox">
                                <!-- This area used as dropdown edit box -->

                            </div>
                            <!-- end widget edit box -->
                            <!-- widget content -->
                            <div class="widget-body ">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="Code">Code</label>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Code, new { @Class = "form-control required", @placeholder = "Code" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="Code">Name</label>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Name, new { @Class = "form-control required", @placeholder = "Name" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="Code">ProductCatagory</label>
                                        <div class="form-group">
                                            @Html.SimpleDropDownFor(m => m.ProductCatagoriesId, "/Config/ProductCategory/DropDownProductCategorys", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="Code">ProductSize</label>
                                        <div class="form-group">
                                            @Html.SimpleDropDownFor(m => m.ProductSizeId, "/Config/ProductSize/DropDownProductSize", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="Code">ProductType</label>
                                        <div class="form-group">
                                            @Html.SimpleDropDownFor(m => m.ProductTypeId, "/Config/ProductType/DropDownProductTypes", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="Code">ProductColor</label>
                                        <div class="form-group">
                                            @Html.SimpleDropDownFor(m => m.ProductColorId, "/Config/ProductColor/DropDownProductColor", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="Code">Unit of Measurement</label>
                                        <div class="form-group">
                                            @Html.SimpleDropDownFor(m => m.UOMId, "/Config/UOM/DropDownUOM", new { @Class = "form-control Dropdown", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="category"> Remarks</label>
                                        <div class="form-group">
                                            @Html.TextAreaFor(m => m.Remarks, new { @Class = "form-control required", @placeholder = "Remarks", @rows = "5" })
                                        </div>
                                    </div>
                                </div>
                                <span class="clearfix"></span>
                                <p class="alert alert-info">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="button" class="btn btn-primary" onclick="pageSubmit('frmProduct');">
                                        Submit
                                    </button>
                                </p>
                                <!-- end widget content -->

                            </div>
                            <!-- end widget div -->

                        </div>
                        <!-- end widget -->

                        </div>

                </article>
                <!-- WIDGET END -->

            </div>

            <!-- end row -->
            <!-- end row -->

        </section>
        <!-- end widget grid -->

    </div>
    <!-- END MAIN CONTENT -->
}
<script src="~/scripts/libs/jquery-2.1.1.min.js"></script>
<script>

    $(document).ready(function () {
        InitDropDowns();
        valiDation("frmProduct");
    })


</script>
<style>
    .required {
        border-bottom: 2px solid #f20 !important;
    }
</style>