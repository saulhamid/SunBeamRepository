@{
    Layout = null;
}
@model SunBeam.Domain.Models.ProductCategory
<!-- Modal -->
@using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { @Id = "frmProductCategory" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;
        </button>
        <h4 class="modal-title" id="myModalLabel">Edit</h4>
    </div>
    @Html.HiddenFor(m => m.Id)
    <div class="modal-body">
        <div class="row ">
            <div class="col-md-6">
                <label for="category"> Name</label>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @Class = "form-control required", @placeholder = "Name" })
                </div>
            </div>
            <div class="col-md-6">
                <label for="category"></label>
                <div class="form-group smart-form">
                    <label class="toggle">
                        @Html.CheckBox("IsActive", new { @Class = "", @placeholder = "Name" })
                       @*// <input type="checkbox" name="checkbox-toggle" checked="checked">*@
                        <i data-swchon-text="ON" data-swchoff-text="OFF"></i>IsActive
                    </label>
                </div>
            </div>
            <div class="col-md-12">
                <label for="category"> Remarks</label>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Remarks, new { @Class = "form-control required", @placeholder = "Remarks", @rows = "5" })
                </div>
            </div>
        </div>
    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="pageSubmit('frmProductCategory');">
                    Submit
                </button>
            </div>
}
<script>
    $(function () {
        valiDation("frmProductCategory");
    });
</script>
