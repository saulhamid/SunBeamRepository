                                        <th>Quantity</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                            </table>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->



            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@Html.Partial("_message");
@section pagespecific {

    <script>
        $(document).ready(function () {
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'l><'col-sm-6 col-xs-6 hidden-xs'C>r>" +
                      "t" +
                      "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-sm-6 col-xs-12'p>>",
                "sAjaxSource": "/CRM/Stock/_index",

                "bProcessing": true,
                 "aLengthMenu": tablelength(),
                 //"sDom": '<"top">l<"bottom"rtp><"clear">',
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                                { "sName": "ProductName", "sWidth": "30%" }
                                , { "sName": "Date", "sWidth": "10%" }
                                , { "sName": "FinalUnitPrice", "sWidth": "15%" }
                                , { "sName": "Quantity", "sWidth": "15%" }
                                , { "sName": "Amount", "sWidth": "15%" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [
                            { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           //, { type: "date-range" }
                ]
            });
            SelectAllForDelete();

        });

    </script>
}